<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appodeal.test.MainActivity">


    <Button
        android:id="@+id/rewarded_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewarded Video" />

    <Button
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banner"
        app:layout_constraintLeft_toRightOf="@id/rewarded_video" />

    <Button
        android:id="@+id/native_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native"
        app:layout_constraintLeft_toRightOf="@id/banner" />
</android.support.constraint.ConstraintLayout>
